<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rv_downloads_logo"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/rv_downloads_picutre"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rv_downloads_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/download_picture"
        android:layout_below="@id/rv_downloads_picutre"
        android:id="@+id/rv_downloads_button"/>

</RelativeLayout>